@page
@model BlindBoxShop.Application.Pages.Admin.UserManagement.IndexModel
@{
}



@{
    ViewData["Title"] = "User Management Dashboard";
}


<style>
    .dashboard-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
    }

    .card-icon {
        font-size: 2rem;
        color: #fff;
    }

    .stat-card {
        background: linear-gradient(135deg, #6e8efb, #a777e3);
        color: white;
    }

    .table-container {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .user-image {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 50%;
    }
</style>


<div class="container-fluid py-4">
    <h1 class="display-4 text-center mb-4">User Management Dashboard</h1>

    
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card dashboard-card stat-card p-4">
                <div class="d-flex align-items-center">
                    <i class="bi bi-people-fill card-icon me-3"></i>
                    <div>
                        <h5>Total Users</h5>
                        <h3>@Model.TotalUsers</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card dashboard-card stat-card p-4">
                <div class="d-flex align-items-center">
                    <i class="bi bi-cart-fill card-icon me-3"></i>
                    <div>
                        <h5>Total Orders</h5>
                        <h3>@Model.TotalOrders</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card dashboard-card stat-card p-4">
                <div class="d-flex align-items-center">
                    <i class="bi bi-star-fill card-icon me-3"></i>
                    <div>
                        <h5>Total Reviews</h5>
                        <h3>@Model.TotalReviews</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <div class="table-container">
        <h3 class="mb-3">User List</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Roles</th>
                    <th>Orders</th>
                    <th>Reviews</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(user.Image))
                            {
                                <img src="@user.Image" alt="User Image" class="user-image" />
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/50" alt="Default Image" class="user-image" />
                            }
                        </td>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            @if (!string.IsNullOrEmpty(user.Address))
                            {
                                @($"{user.Address}, {user.Wards}, {user.District}, {user.Provinces}")
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>
                            @if (user.Roles != null && user.Roles.Any())
                            {
                                @string.Join(", ", user.Roles.Select(r => r.Name))
                            }
                            else
                            {
                                <span class="text-muted">No Roles</span>
                            }
                        </td>
                        <td>@(user.Orders?.Count ?? 0)</td>
                        <td>@(user.CustomerReviews?.Count ?? 0)</td>
                        <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>
                            @(user.UpdatedAt.HasValue ? user.UpdatedAt.Value.ToString("dd/MM/yyyy") : "N/A")
                        </td>
                        <td>
                            <a href="/Admin/UserManagement/Edit/@user.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a href="/Admin/UserManagement/Delete/@user.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
}