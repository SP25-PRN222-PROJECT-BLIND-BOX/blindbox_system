                    foreach (var item in blindBoxItems.Value)
                    {
                        if (!string.IsNullOrWhiteSpace(item.ImageUrl))
                        {
                            var imageUrl = item.ImageUrl.Trim();
                            if (!imageUrl.StartsWith("http://") && !imageUrl.StartsWith("https://") && !imageUrl.StartsWith("/"))
                            {
                                imageUrl = "/" + imageUrl;
