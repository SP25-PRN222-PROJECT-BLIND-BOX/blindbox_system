@page "/category"
@attribute [StreamRendering]
@rendermode InteractiveServer

@using BlindBoxShop.Application.Pages.Employee.BlindBoxCategoryPage.Partials

<PageTitle>Category</PageTitle>

<!-- Page Header -->
<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-0 px-0">
    <MudPaper Elevation="0" Class="page-header" Style="background-color: var(--mud-palette-secondary);">
        <MudText Typo="Typo.h3" Class="font-weight-bold mb-2">Category Management</MudText>
        <MudText Typo="Typo.body1">Manage your product categories</MudText>
    </MudPaper>
</MudContainer>

<MudContainer Class="mt-8 px-8 min-vh-100" MaxWidth="MaxWidth.ExtraExtraLarge">
    <MudStack>
        <MudPaper Class="pa-3">
            <BlindBoxCategoryTable />
        </MudPaper>
    </MudStack>
</MudContainer>

