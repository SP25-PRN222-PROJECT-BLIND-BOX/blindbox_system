@page "/blindbox"
@attribute [StreamRendering]
@rendermode InteractiveServer

@using BlindBoxShop.Application.Pages.Employee.BlindBoxPage.Partials

<PageTitle>BlindBox Management</PageTitle>

<!-- Page Header -->
<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-0 px-0">
    <MudPaper Elevation="0" Class="page-header" Style="background-color: var(--mud-palette-primary-darken);">
        <MudText Typo="Typo.h3" Class="font-weight-bold mb-2 text-white">BlindBox Management</MudText>
        <MudText Typo="Typo.body1" Class="text-white">Manage your BlindBox products</MudText>
    </MudPaper>
</MudContainer>

<MudContainer Class="mt-8 px-8 min-vh-100" MaxWidth="MaxWidth.ExtraExtraLarge">
    <MudStack>
        <MudPaper Class="pa-3">
            <BlindBoxTable />
        </MudPaper>
    </MudStack>
</MudContainer> 