@page "/sample-products"
@layout BlindBoxShop.Application.Components.Layout.MainLayout

<PageTitle>Sản Phẩm Mẫu</PageTitle>

<div class="container mx-auto py-6 px-4">
    <div class="bg-cyan-50 rounded-lg p-4 mb-6">
        <h1 class="text-xl font-bold text-cyan-800">Sản Phẩm Mẫu</h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        @foreach (var product in _sampleProducts)
        {
            <div class="bg-white rounded-lg shadow-sm overflow-hidden transition-transform hover:shadow-md hover:scale-[1.01]">
                <img src="@product.ImageUrl" alt="@product.Name" class="w-full h-48 object-cover" />
                <div class="p-4">
                    <h3 class="font-medium text-lg mb-2">@product.Name</h3>
                    <p class="text-gray-500 text-sm mb-2">@product.Description</p>
                    <div class="flex justify-between items-center mt-4">
                        <div class="text-cyan-700 font-bold">@FormatPrice(product.Price)</div>
                        <MudButton 
                            Variant="Variant.Filled" 
                            Color="Color.Primary" 
                            Size="Size.Small"
                            OnClick="@(() => AddToCart(product))"
                            StartIcon="@Icons.Material.Filled.ShoppingCart"
                            Class="rounded-md">
                            Thêm vào giỏ
                        </MudButton>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (_showAlert)
    {
        <MudAlert Severity="Severity.Success" Class="mt-6">
            Đã thêm sản phẩm vào giỏ hàng thành công!
        </MudAlert>
    }
</div> 